<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='org.eclipse.che.plugin.artik.ide.cloud.api.UserInfoResources'/>
    <ui:with field='locale' type='org.eclipse.che.plugin.artik.ide.ArtikLocalizationConstant'/>

    <g:DockLayoutPanel unit="PX" width="270px" height="195px" addStyleNames="{res.userInfoCss.emptyBorder}">
        <g:center>
            <g:FlowPanel addStyleNames="{res.userInfoCss.spacing} {res.userInfoCss.mainText}">
                <g:Label addStyleNames="{res.userInfoCss.label}" text="{locale.artikUserInfoName}"/>
                <g:Label ui:field="userInfoName" addStyleNames="{res.userInfoCss.value}"/>

                <g:Label addStyleNames="{res.userInfoCss.label}" text="{locale.artikUserInfoFullName}"/>
                <g:Label ui:field="userInfoFullName" addStyleNames="{res.userInfoCss.value}"/>

                <g:Label addStyleNames="{res.userInfoCss.label}" text="{locale.artikUserInfoEmail}"/>
                <g:Label ui:field="userInfoEmail" addStyleNames="{res.userInfoCss.value}"/>

                <g:Label addStyleNames="{res.userInfoCss.label}" text="{locale.artikUserInfoIdentity}"/>
                <g:Label ui:field="userInfoIdentity" addStyleNames="{res.userInfoCss.value}"/>

                <g:Label addStyleNames="{res.userInfoCss.label}" text="{locale.artikUserInfoAccountType}"/>
                <g:Label ui:field="userInfoAccountType" addStyleNames="{res.userInfoCss.value}"/>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
